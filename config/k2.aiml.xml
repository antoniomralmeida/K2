<aiml version="1.0.1" encoding="UTF-8">
   <category>
      <pattern>(OLÁ|OI) *</pattern>
      <template>
         <random>
            <li>Olá! Meu nome é <bot name="name"/>.</li> 
         <li>Oi! Meu nome é <bot name="name"/>.</li> 
         </random>
      </template>
   </category>
   <category>
      <pattern>VOCÊ TEM ALGUMA IDEIA</pattern>
      <template>
         Me desculpe, o que você está dizendo?
      </template>
   </category>
   <category>
      <pattern>(EU SOU|MEU NOME É) *</pattern>
      <template>
         Seja bem vindo ao K2 <set name="user"><star/></set>!
      </template>
   </category>

   <category>
      <pattern>(SEU)? * NOME *</pattern>
      <template>
         Me chamo  <bot name="name"/>
      </template>
   </category>
   <category>
      <pattern>*</pattern>
      <template>
         <srai>VOCÊ TEM ALGUMA IDEIA</srai>
      </template>
   </category>
</aiml>